
<!--This is used for user information admin-->
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>User_ID</th>
      <th>Login</th>
      <th>Password</th>
      <th colspan="3"> Operation </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.login %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<!--can choose create a new user or choose to go back to home page-->
<%= link_to 'Create New User', new_user_path %> <br>
