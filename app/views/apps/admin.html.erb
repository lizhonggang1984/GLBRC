<!--show all information for all apps, not limited to certain user,-->
<!--and also include methods to manipulate app informaiton, create, update or delete-->
<p id="notice"><%= notice %></p>

<h1>Apps for <%= @user.login %></h1>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th>Status</th>
      <th>Link</th>
      <th>User</th>
      <th>Order</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.description %></td>
        <td><%= app.color %></td>
        <td><%= app.status %></td>
        <td><%= app.link %></td>
        <td><%= app.user_id %></td>
        <td><%= app.order %></td>
        <td><%= app.priority %></td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!--this is the link to add new app by user self-design-->
<%= link_to 'New App', new_app_path %>
